<!DOCTYPE html>
<html>
  <head>
    <title>ContactsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h3><a href="/">Home</a> | 
    <% if current_user %>
     <a href="/logout">Logout</a> 
    <% else %>
    <a href="/signup">Sign Up</a> | <a href="/login">Login</a> 
    <% end %>
    </h3>
    <%= current_user && "Hello " + current_user.name %>



<%= yield %>

  </body>
</html>
